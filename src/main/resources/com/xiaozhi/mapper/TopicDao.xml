<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaozhi.dao.TopicDao">

    <resultMap type="com.xiaozhi.entity.Topic" id="TopicMap">
        <result property="id" column="ID" jdbcType="VARCHAR"/>
        <result property="title" column="TITLE" jdbcType="VARCHAR"/>
        <result property="prise" column="PRISE" jdbcType="INTEGER"/>
        <result property="comment" column="COMMENT" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TopicMap">
        select
          ID, TITLE, PRISE, COMMENT
        from xiaozhi.topic
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TopicMap">
        select
          ID, TITLE, PRISE, COMMENT
        from xiaozhi.topic
        order by PRISE DESC
        limit #{offset}, #{limit}
    </select>

    <!-- 查询评论 -->

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TopicMap">
        select
        ID, TITLE, PRISE, COMMENT
        from xiaozhi.topic
        <where>
            <if test="id != null and id != ''">
                and ID = #{id}
            </if>
            <if test="title != null and title != ''">
                and TITLE = #{title}
            </if>
            <if test="prise != null">
                and PRISE = #{prise}
            </if>
            <if test="comment != null">
                and COMMENT = #{comment}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true" >
        insert into xiaozhi.topic(ID,TITLE, PRISE, COMMENT)
        values (#{id},#{title}, #{prise}, #{comment})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into xiaozhi.topic(TITLE, PRISE, COMMENT)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.prise}, #{entity.comment})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into xiaozhi.topic(TITLE, PRISE, COMMENT)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.prise}, #{entity.comment})
        </foreach>
        on duplicate key update
        TITLE = values(TITLE) , PRISE = values(PRISE) , COMMENT = values(COMMENT)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update xiaozhi.topic
        <set>
            <if test="title != null and title != ''">
                TITLE = #{title},
            </if>
            <if test="prise != null">
                PRISE = #{prise},
            </if>
            <if test="comment != null">
                COMMENT = #{comment},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from xiaozhi.topic where ID = #{id}
    </delete>

    <!--热股榜-->
    <select id="queryHot" resultMap="TopicMap">
        select
          ID, TITLE, PRISE, COMMENT
        from xiaozhi.topic
        order by COMMENT DESC
        limit 0, 1
    </select>

    <!--发表提问-->
    <insert id="insertQuiz" parameterType="com.xiaozhi.vo.MyQuizVO">
         insert into xiaozhi.myquiz(USER_ID,TOPIC_ID)
        values (#{user_id},#{topic_id})
    </insert>
</mapper>